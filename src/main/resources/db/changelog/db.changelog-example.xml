<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet author="firstChangeSet" id="1">
        <sql dbms="postgresql">
            CREATE SCHEMA game
        </sql>
        <createTable tableName="game">
            <column name="gameId" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="gameBoard" type="jsonb">
            </column>
            <column name="gameState" type="varchar(100)"></column>
            <column name="session" type="uuid">
                <constraints foreignKeyName="fk_game_session" referencedColumnNames="sessionId"/>
            </column>
        </createTable>
        <createTable tableName="session">
            <column name="sessionId" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="playerRed" type="uuid">
            </column>
            <column name="playerYellow" type="uuid">
            </column>
            <column name="lastPolledRed" type="timestamp with time zone">
            </column>
            <column name="lastPolledYellow" type="timestamp with time zone">
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="game" baseColumnNames="session" constraintName="fk_game"
                                 referencedTableName="session"
                                 referencedColumnNames="sessionId"/>
    </changeSet>

</databaseChangeLog>